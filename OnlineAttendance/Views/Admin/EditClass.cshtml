@model OnlineAttendance.Models.zclass
@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div class="container-fluid">
    <h1></h1>
</div>
<form action="~/Admin/EditClass" method="post">
    <div class="col-md-12 p-1">
        <div class="card card-succses forcardpadding">
            <div class="card-header">
                <h3 class="card-title">Add Class</h3>
            </div>
            <div class="card-body">
                <div class="col-md-12 row p-0 forcardpadding">
                    <input class="hidden" type="text" name="cid" value="@Model.cid" />
                    <div class="col-md-4">
                        <label class="col-md-12">Name of the Class</label>
                        <div class="col-md-12">
                            <input class="form-control from-group-sm" name="classname" value="@Model.classname" id="classname" maxlength="500" required />
                        </div>
                    </div>
                    <div class="col-md-12 text-center forbutton" style="padding-top:15px;">
                        <button id="btnSave" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

